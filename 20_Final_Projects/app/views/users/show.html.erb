<div class="row">
	<div class="col-lg-10">
		<p class = "text-primary text-right">
			<%= link_to "<button class='btn btn-default btn-lg btn-info'><i class='icon-home'></i> Home</button>".html_safe, root_path, class: "text-primary" %>
			<%= link_to "<button class='btn btn-default btn-lg btn-primary'><i class='icon-gift '></i> Make a Donation</button>".html_safe, new_entry_path, class: "text-primary" %>
		</p>
	</div>
</div> <!-- closed .row --> 


<div class="row">
	<div class="col-lg-10">
	
		<div class="col-md-6">
			<div class="row">
				<h3><span id="message">Hello</span>
					<% if current_user.name? %>
						<%= current_user.name  %>
					<% else %>
						<%=  current_user.email  %>
					<% end %>
				</h3>
			</div>
			
			
			<div class="row">
				<p><%= @user.street1 %></p>
			</div> <!-- closed .row -->	
			
			
			<div class="row">
				<p><%= @user.street2 %></p>
			</div> <!-- closed .row -->	
			
			
			<div class="row">
				<p><%= @user.city %>, <%= @user.state %> | <%= @user.zipcode %></p>
			</div> <!-- closed .row -->	
			
			
			<div class="row">
				<p><i class="icon-phone"></i> <%= @user.phone %></p>
			</div> <!-- closed .row -->	
			
						
			<div class="row">
					<br>
					<%= link_to "<button class='btn btn-default btn-lg btn-success'><i class='icon-edit'></i> Edit your profile</button>".html_safe, edit_user_path(current_user.id), class: "text-success" %>
			</div> <!-- closed .row -->		
		</div>
		
		
		<div class="col-md-6">
			<h3>Your Donation History</h3>
			
			<ul id="donation_history">
			<% @entries.each do |entry| %>
				<li><i class='icon-gift '></i> <%= link_to  entry.name_item, entry_path(entry)  %></li>
			<% end %>
			</ul>			
		</div>
		
		
	</div>
</div> <!-- closed .row -->		

		
